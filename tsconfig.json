{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["es6", "es2017"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"],
            "@components/*": ["common/components/*"],
            "@screens/*": ["common/screens/*"],
            "@containers/*": ["containers/*"],
            "@modules/*": ["modules/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "extends": "expo/tsconfig.base"
}
